{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/server",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "noEmit": false,
    "allowJs": false,
    "isolatedModules": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
